<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15px"
            android:paddingRight="10px">


            <TextView
                android:id="@+id/labelAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"

                android:text="Address" />

            <TextView
                android:id="@+id/itemAddress"
                android:maxWidth="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/labelNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"

                android:text="Phone" />

            <TextView
                android:id="@+id/itemPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phonenumber" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/one"
            android:paddingLeft="15px"
            android:paddingRight="10px">

            <TextView
                android:id="@+id/labelpPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"

                android:text="Price" />
            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/labelType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"

                android:text="Type" />
            <TextView
                android:id="@+id/itemCashCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash/Card" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15px"
            android:paddingRight="10px"
            android:layoutDirection="rtl"
            android:layout_alignParentRight="true"
            >




        <Button
                android:id="@+id/deleteShiftButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorAccent"
                android:text="Delete" />

            <Button
                android:id="@+id/editShiftButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:text="Edit" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>